.caret {
    display: inline-block;
    width: 0;
    height: 0;
    margin-left: 2px;
    vertical-align: middle;
    border-top: 4px solid;
    border-right: 4px solid transparent;
    border-left: 4px solid transparent;
}

.btn {
    width: 23px;
    display: inline-block;
    margin-bottom: 0;
    font-weight: normal;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    background-image: none;
    border: 1px solid #ccc;
    white-space: nowrap;
    padding: 4px 4px;
    font-size: 13px;
    line-height: 1.42857;
    border-radius: 0;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    color: #333;
    background-color: #fff;
    position: relative;
}

.form-control .input-group-btn .btn {
    height: 26px;
    border-width: 0 0 0 1px;
}

.form-control[readonly], fieldset[disabled] .form-control, .item-input input[readonly] {
    cursor: default;
    background-color: #eee;
    opacity: 1;
}

