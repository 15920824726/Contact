<ion-view id="businessPartner" hide-nav-bar="true" class="businessPartner-box" can-swipe-back="false">
    <!--view-title="Business Partner"-->
    <ion-header-bar class="bar bar-header item-input-inset">
        <!--<div class="bar-header">-->
            <!--<h4 class="businessPartnerTitle">-->
                <!--{{options.SlectCompany}}-->
            <!--</h4>-->
        <!--</div>-->
        <button  data-ng-click="goToSettting()"
                 class="button buttons button-clear header-item setting">
            <i class="contact-icon-seting"></i>
        </button>
    </ion-header-bar>
    <div class="list list-inset">
        <div class="item item-input search-input">
            <i class="placeholder-icon contact-icon-search"></i>
            <!--<input type="text" ng-model="options.Pattern" ng-change="search()" placeholder="to search..." ng-model-options="{debounce:1000}">-->
            <input type="text" ng-model="options.FilterRequest.Pattern" ng-change="search()" placeholder="{{translate.businessPartner.toSearch}}"
                   ng-model-options="{debounce:1000}">
            <a class="ion-close-circled" ng-click="skipCancel()"></a>
        </div>
    </div>
    <ion-content class="iContent" padding="true" overflow-scroll="false">
        <ion-list data-ng-if="hasBusinessPartner">
            <ion-item ng-repeat="businessPartner in businessPartners "
                      class="item-remove-animate contact-item item-icon-right"
                      data-ng-class="itemClass"
                      type="item-text-wrap" ng-click="skipContactList(businessPartner.id,businessPartner.businessPartnerName1)" on-filter-render-filter>
                <div class="contact-item-detail">
                    <p  class="bpParrent" data-ng-if="!businessPartner.ownDefine.state" style="font-weight:bold ">{{businessPartner.businessPartnerName1}}</p>
                    <!--<i class="contact-icon-name2 " data-ng-show="!businessPartner.ownDefine.state" ></i>-->
                    <p class="bpName bpParrent"  data-ng-if="!businessPartner.ownDefine.state" style="font-size: small">{{businessPartner.businessPartnerName2}}</p>

                    <p  data-ng-if="businessPartner.ownDefine.state" style="font-weight:bold ">{{businessPartner.businessPartnerName1}}</p>
                    <p class="bpName bpVariable" data-ng-if="businessPartner.ownDefine.state" style="font-size: small">{{businessPartner.ownDefine.value}}</p>
                </div>
                <a href="#/desktop/businessPartnerDetail/{{businessPartner.id}}">
                    <i class="icon ion-ios-information-outline contact-info"></i>
                </a>
            </ion-item>
        </ion-list>

        <p data-ng-if="!hasBusinessPartner" style="position: absolute;top:50%;width: 100%;text-align: center;font-size: x-large;color: rgb(169,169,169)">{{translate.businessPartner.NoMatchesFound}}</p>
        <ion-infinite-scroll on-infinite="loadMore()" data-ng-if="moreBusinessPartner" immediate-check="false"
                             distance="10%"></ion-infinite-scroll>
        <!--<div data-page-text data-total-load-records="totalLoadRecords" data-total-records="totalRecords"></div>-->
    </ion-content>

</ion-view>

