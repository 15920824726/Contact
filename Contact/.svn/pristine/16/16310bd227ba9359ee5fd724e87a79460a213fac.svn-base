#favoritelist ion-header-bar {
    background-color: #0167b1;
}

#favoritelist ion-content ion-item .item-content{
    /*display: flex;*/
    /*flex-direction: row;*/
    padding: 10px;
}

#favoritelist ion-content ion-item .contact-item-img{
    /*float: left;width: 20%;text-align: center*/
    float: left;
    width: 20%;
}

#favoritelist ion-content ion-item .secondblock{
    /*float: left;width: 80%*/
    float: left;
    width: 80%;
}

#favoritelist ion-content ion-item .secondblock i.contact-icon-company{
    opacity: 0.7;
}

#favoritelist ion-content ion-item .secondblock p:first-child{
font-weight: bold;
}


#favoritelist ion-content ion-item img{
    border-radius: 50%;
    max-width: 50px;
    max-height: 45px;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    margin-right: 20px;
    min-width: 50px;
    min-height: 45px;
}

#favoritelist  ion-list ion-option-button{
    background-color:darkgrey
}

#favoritelist ion-content.hasData .list ion-item {
    /*width: 90%;*/
    margin: 0 10px;
    border: none;
    border-bottom: 1px #d3d3d3 solid;

}

#favoritelist ion-content.noData{
    display: flex;
    justify-content: center;
    align-items: center;
}
#favoritelist ion-content.noData p{
    font-size: x-large;
    color: darkgray;
}