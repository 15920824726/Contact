<ion-modal-view id="commonLanguage">
    <ion-header-bar class="bar-header bar-light bar-blue-text" style="background-color: #0167b1;border: none">
        <button ng-click="languagemodal.hide()"
                class="button back-button buttons ion-chevron-left button-clear header-item icon-back"></button>
        <h1 class="title" style="color: #fff">{{currentLanguage}}</h1>
    </ion-header-bar>

    <ion-content>
        <ion-list data-ng-click="changeLanguage()">
            <ion-radio ng-value="language.language" ng-model="languageId" ng-repeat="language in languages"
                       data-ng-click="changeLanguage(languageId)">
                {{language.languageName}}
            </ion-radio>
        </ion-list>
    </ion-content>
</ion-modal-view>
